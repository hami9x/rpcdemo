{
  "name": "@assignment1/shared",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@swc/core": "^1.3.11",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "chai": "^4.3.7",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.2",
    "tsconfig-paths": "^4.1.0",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0"
  },
  "scripts": {
    "build": "turbo run build",
    "watch": "turbo run watch --parallel",
    "test": "turbo run test",
    "clean": "rimraf -f -- **/tsconfig.tsbuildinfo **/dist || true",
    "cleanbuild": "yarn clean && rimraf -rf **/node_modules && yarn && yarn build",
    "apiserver:dev": "CONFIG_DIR=. yarn cli:dev apiserver",
    "cli:dev": "nodemon -r source-map-support/register apps/cli/dist/main.js",
    "cli": "node -r source-map-support/register apps/cli/dist/main.js",
    "lint": "eslint --ext .ts,.tsx .",
    "fix": "yarn lint --fix"
  },
  "nodemonConfig": {
    "ignore": [
      "data",
      "resources"
    ]
  },
  "packageManager": "yarn@3.2.4",
  "dependencies": {
    "@types/chai": "^4.3.4",
    "@types/debug": "^4.1.7",
    "debug": "^4.3.4",
    "gravatar-url": "^4.0.1",
    "ts-jest": "^29.0.5"
  }
}
