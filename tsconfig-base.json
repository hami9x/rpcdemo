{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
